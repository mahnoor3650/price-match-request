
<!-- price-match-button.liquid -->


<button
  type="button"
  id="open-price-match-btn"
  class="open-price-match-btn"
   data-product-id="{{  product.selected_or_first_available_variant.id}}"
     data-customer-id="{{ customer.id | default: 'null' }}"
     data-variant-id="{{ product.variants.first.id }}"
  style="
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
  "
>
  {{ block.settings.button_label }}
</button>


{% schema %}
{
  "name": "Price Match Button",
  "target": "section",
  "stylesheet": "style.css",
  "javascript": "script.js",
  "settings": [
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Price Match"
    },    
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Button Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#fff"
    }
  ]
}
{% endschema %}





